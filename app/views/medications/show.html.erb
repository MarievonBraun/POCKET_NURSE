<div class="show-individual-medication">

    <div class="show-content">
      <%= link_to "Back", :back %>

      <h1><%= @medication.name.upcase %></h1>

      <h5>DURATION:</h5>
      <p><%= @medication.start_date %> - <%= @medication.end_date %></p>

      <h5>DOSE:</h5>
      <p><%= @medication.dose %></p>

      <div class="comment-box">
        <p>Comments:</p>
        <p><%= @medication.comment %></p>
      </div>

      <div class="btn-add-medication">
        <a><%= link_to "Add Medication", new_medication_path %></a>
      </div>
    </div>
</div>
