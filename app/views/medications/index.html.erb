<div class="all-medications">

  <div id="all-medications-title">
    <h1> All Medications</h1>
  </div>

  <div class="cards-container">
  <% @medications.each do |medication| %>
    <div class="medication-index-card">
      <h2><%= medication.name.upcase %></h2>
      <p><strong>Dose:</strong> <%= medication.dose %></p>
      <p><strong>From</strong>  <%= medication.start_date %> <strong>To</strong> <%= medication.end_date %></p>

      <div class="delete-medication">
        <%= link_to medication_path(medication),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "trash-can" do %>
        <%= image_tag "trash.png" %>
        <% end %>
      </div>

    </div>
    <% end %>

    <div class="btn-add-medication">
      <a><%= link_to "Add Medication", new_medication_path %></a>
    </div>

  </div>
</div>
